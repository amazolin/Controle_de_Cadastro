<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo personalizado para o BottomNavigationView -->
    <style name="CustomBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavText</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">4dp</item> <!-- Espaçamento entre ícone e texto -->
    </style>
</resources>